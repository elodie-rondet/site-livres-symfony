<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Livres{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="{{ asset('assets/main.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/connexion.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/form.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/livre.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/menu.css') }}" rel="stylesheet">
        <link rel="icon" href="/favicon.ico">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <meta name="description" content="A compléter">
        <link rel="apple-touch-icon" href="">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <script>
    document.querySelector("div.label-img div label").style.display ="none"; 
    document.querySelector("div#nav.nav").style.display = "none";
    function affichageMobile () {
    document.getElementById('nav').className = "nav";
    }

    function hide() {
       document.getElementById('nav').className = "nav hide";
    }

    
    
    </script>
    <header class="Header_Header__wwyjE">
<div class="container">
    <img class="logo" src="{{ asset('images/logo.png') }}" alt="logo">
    <div class="menu">
    <ul>
        <li><a aria-current="page" class="Header_activeLink__-W+SD" href="{{ path('index') }}">Accueil</a>
        </li>
        {% if app.user %}
            <li><a href="{{ path('ajoutLivre') }}">Ajouter un livre</a></li>
            <li><a href="{{ path('app_logout') }}">Logout</a></li>
        {% else %}
        <li><a href="{{ path('app_login') }}">Ajouter un livre</a></li>
        <li><a href="{{ path('app_login') }}">Se connecter</a></li>
    </ul>
    </div>
        {% endif %}
</div>
<div id="conteneur-mobile" class="conteneur-mobile">
	<label class="btn btn-open" for="nav" onclick="affichageMobile()">
		<div class="menu-burger">
			<span>__</span>
			<span>__</span>
			<span>__</span>
		</div>
	</label>
	<div id="nav" class="nav hide">
		<div class="nav-header">
			<img id="close" class="close" src="{{ asset('images/fermeture.webp') }}" alt="" onclick="hide()">
		</div>
	    <nav>
	    	<ul class="nav-links">
	    	<label class="btn btn-nav" for="nav">
	    	</label>
	    	<li><a aria-current="page" class="Header_activeLink__-W+SD" href="{{ path('index') }}" onclick="hide()">Accueil</a>
	    	</li>
	    	{% if app.user %}
	    		<li><a href="{{ path('ajoutLivre') }}" onclick="hide()">Ajouter un livre</a></li>
	    		<li><a href="{{ path('app_logout') }}" onclick="hide()">Logout</a></li>
	    	{% else %}
	    	<li><a href="{{ path('app_login') }}" onclick="hide()">Ajouter un livre</a></li>
	    	<li><a href="{{ path('app_login') }}" onclick="hide()">Se connecter</a></li></ul>
	    	{% endif %}
	    	</ul>
	    </nav>
	</div>
</div>
</header>
    <body>
        {% block body %}
        {% endblock %}
    </body>
</html>
